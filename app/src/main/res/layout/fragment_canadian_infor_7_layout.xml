<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="567dp"
            android:src="@mipmap/study_info_pic_6"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="ContentDescription,MissingConstraints"/>

        <View
            android:layout_width="360dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/large_leaf_icon"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintLeft_toLeftOf="@+id/imageView11"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语言学校"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView10"
            tools:ignore="HardcodedText"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="285dp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintGuide_percent="0.5026455"/>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/scrollView2"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toLeftOf="@+id/imageView11"
            app:layout_constraintRight_toRightOf="@+id/imageView11"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11">

            <TextView
                android:id="@+id/contentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="@string/content_7"
                android:textColor="@android:color/black"
                tools:layout_editor_absoluteY="47dp"
                tools:layout_editor_absoluteX="321dp"/>

        </ScrollView>


    </android.support.constraint.ConstraintLayout>
</layout>

