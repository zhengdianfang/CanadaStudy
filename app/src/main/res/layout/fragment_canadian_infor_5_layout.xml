<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.text.Html" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/sucess"
            android:id="@+id/imageView18"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:text="成功"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textColor="@color/project_ee3223"
            app:layout_constraintLeft_toRightOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/imageView18"
            android:layout_marginTop="16dp" />

        <TextView
            android:text="@{Html.fromHtml(@string/content_5_1)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/textView15"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView18"
            app:layout_constraintBottom_toTopOf="@+id/imageView19"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/aboutscuessbg"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/imageView19"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="@{Html.fromHtml(@string/content_5_2)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/textView16"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView19" />
    </android.support.constraint.ConstraintLayout>
</layout>

