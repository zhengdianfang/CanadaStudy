<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.text.Html"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="72dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/large_leaf_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="加拿大创新型教育机构一览"
            android:textColor="#f3aa3a"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintLeft_toRightOf="@+id/imageView10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView10"
            tools:layout_constraintTop_creator="1"
            tools:ignore="HardcodedText" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_react_radus"
                    android:text="@{Html.fromHtml(@string/content_6_1)}"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/white"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_react_radus"
                    android:text="@{Html.fromHtml(@string/content_6_2)}"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/white"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_react_radus"
                    android:text="@{Html.fromHtml(@string/content_6_3)}"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/white"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>
        </ScrollView>


    </android.support.constraint.ConstraintLayout>
</layout>
