<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.text.Html"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/study_info_pic_9"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/imageView14"
            tools:ignore="MissingConstraints"/>

        <View
            android:layout_width="360dp"
            android:layout_height="0dp"
            android:background="#fd9226"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/view"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="285dp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintGuide_percent="0.5026455"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/large_leaf_icon"
            android:id="@+id/imageView15"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView14"
            android:layout_marginStart="16dp"/>

        <TextView
            android:text="以学生为中心的教育理念"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            android:layout_marginTop="28dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView15"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView15"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            android:layout_marginBottom="8dp">


            <TextView
                android:id="@+id/contentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="@{Html.fromHtml(@string/content_10)}"
                android:textColor="@android:color/black"/>


        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</layout>

